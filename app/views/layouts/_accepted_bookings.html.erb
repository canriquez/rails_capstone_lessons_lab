
  <div class="alert alert-light" role="alert">
    <span>Total Booked hours: <%= @transactions.sum(:minutes)/60 %></span> | 
    <span>Current Revenue: <%= @transactions.sum(:price) %> usd</span>
  </div>
   <% @transactions.each do |booking| %>
  <div data-turbolinks="false" id="booking-<%= booking.id %>" class=" shadows course-card card mb-3 mt-3 ml-1" style="max-width: 38rem;">
    <div class="card-header bg-transparent">
      <div class="media d-flex justify-content-between">
          <div class="header-left d-flex">
            <%= image_tag("ielts_cover_image.jpeg", size: "56x30", alt: "Edit Entry") %>
            <div class="media-body">
                <h5 class="mt-1 ml-4"><%= booking.student_name %></h5>
            </div>
          </div>
          <div class="header-right">
            <small class="text-muted">Booking date: <%= to_date(booking.date) %></small>
            <button id="sw-<%= booking.id %>" type="button" class="course-on-btn shadows btn sw">
              <%= svg('switch') %>
            </button>
          </div>
      </div>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= booking.course_name%></h5>
      <p class="card-text"><%= booking.accepted_date%></p>                                      
    </div>
    <div class="card-footer bg-transparent d-flex justify-content-between">
      <div class="ft-right">

        <button value="view" name="view" type="button" class="view shadows icon-btn btn">
         <%= link_to group_path(booking) do %>
          <%= svg('view') %>
          <% end %>
        </button>

        <button value="edit" name="edit" type="button" class="edit shadows icon-btn btn">
         <%= link_to edit_group_path(booking) do %>
          <%= svg('edit') %>
          <% end %>
        </button>

        <button type="button" class="shadows icon-btn btn">

        <%= link_to confirm_destroy_group_path(booking), data: { remote: true }, class: "delete" do %>
          <%= svg('trash_can') %>
          <% end %>
        </button>

      </div>
    </div>
  </div>
  <% end %>